<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BBC1E6"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="131dp"
                android:layout_height="128dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="255dp"
                android:layout_height="70dp"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/imageView"
                android:text="College_Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textViewCourse"
                android:layout_width="140dp"
                android:layout_height="46dp"
                android:layout_below="@id/textViewName"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/imageView"
                android:text="College_course"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewLoc"
                android:layout_width="253dp"
                android:layout_height="48dp"
                android:layout_below="@+id/textViewWebsite"
                android:layout_marginLeft="-12dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/imageView"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="City_name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textColor="#E8000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewWebsite"
                android:layout_width="259dp"
                android:layout_height="61dp"
                android:layout_below="@+id/textViewCourse"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/imageView"
                android:autoLink="all"
                android:clickable="true"
                android:text="website"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#E8000000"
                android:textColorLink="#090707"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCode"
                android:layout_width="113dp"
                android:layout_height="49dp"
                android:layout_alignBottom="@+id/textViewWebsite"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="66dp"
                android:layout_toEndOf="@+id/textViewCourse"
                android:text="college_code"
                android:textSize="24sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>